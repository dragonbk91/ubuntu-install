#!/bin/bash -ex
cd ~/source-install
mkdir make

cd make

lftp ftp://ftp.gnu.org/gnu/make/ <<EOF
get make-4.1.tar.gz
exit
EOF

tar -xzvf make-4.1.tar.gz
cd make-4.1

./configure
sudo make install
